<vbox width="25%" height="75%">
    <tabview id="tv1" width="300" height="600">
            <vbox text="Details">
                <label text="Cur Mode: " id="curModeDisplay" style="font-size: 18px;"/>
                <spacer height="5" />
                <label text="Selected Object Details" style="font-size: 12px;"/>
                <spacer height="5" />
                <checkbox text="Flip X" id ="flipXBox"/>
                <checkbox text="Flip Y" id ="flipYBox"/>
                <label text="Tint" style="font-size: 12px;"/>
                <number-stepper pos="0" step="0.1" min="-1" max="1" id="tintStepper"/>
                <checkbox text="Solid" id ="solidCheck"/>
                <number-stepper pos="1" step="0.1" min="0" max="1" id="scrollXStepper"/>
                <number-stepper pos="1" step="0.1" min="0" max="1" id="scrollYStepper"/>
                <number-stepper pos="0" step="1" min="-360" max="360" id="angleStepper"/>
                <textfield id="subTextField"/>
                <spacer />
                <section-header text="Z Order" />
                <number-stepper pos="-1" step="1" min="-1" max="10" id="zOrderStepper"/>
                <checkbox text="Show Layer" id ="hiddenCheck"/>
            </vbox>
    </tabview>
</vbox>